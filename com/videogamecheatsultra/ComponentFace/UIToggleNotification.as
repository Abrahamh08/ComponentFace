package{		import flash.display.MovieClip;	import flash.events.TouchEvent;	import com.greensock.TweenMax;	import com.greensock.easing.Expo;	import flash.display.DisplayObject;	import flash.display.Stage;	import flash.geom.Point;		public class UIToggleNotification extends MovieClip	{		protected var clip:DisplayObject;		protected var changedRotation:Boolean = false;				public function UIToggleNotification(attachedClip:DisplayObject, container:Stage)		{			arrowMain.addEventListener(TouchEvent.TOUCH_TAP, toggleButton);			attachedClip.x = this.x - attachedClip.width / 2 - 50;			addChild(attachedClip);			clip = attachedClip;		}				protected function toggleButton(e:TouchEvent):void		{			if(changedRotation == false)			{				TweenMax.to(this, 0.5, {shortRotation:{rotation:180}, ease:Expo.easeOut});				changedRotation = true;				clip.visible = false;			}else			{				if(changedRotation == true)				{					TweenMax.to(this, 1, {shortRotation:{rotation:0}, ease:Expo.easeOut});					changedRotation = false;					clip.visible = true;				}			}		}			}	}